{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "*": ["node_modules/*"],
      "@/*": ["src/*"],
    },
    "lib": ["dom", "es6"],
    "declaration": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
  